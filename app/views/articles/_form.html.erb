<div class="row justify-content-center">
  <div class="col-5">
    <%= form_with model: article do |form| %>
      <div class="form-group">
        <%= form.label :title, 'Title:', :class => "control-label" %><br>
        <%= form.text_field :title, :class => "form-control" %>
        <% article.errors.full_messages_for(:title).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :body, 'Body:', :class => "control-label" %><br>
        <%= form.text_area :body, :class => "form-control" %><br>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.file_field :attachment,
        accept: 'image/png,image/jpeg,image/gif',
        enctype: "multipart/alternative",
        class: "form-control"
        %>
      </div>

      <div class="form-group">
        <%= form.label :category, 'Category:', :class => "control-label" %><br>
        <%= form.collection_select(:category_id, Category.all, :id, :name, :class => "form-control") %>
      </div>

      <div class="form-group">
        <%= form.label :status, 'Status:', :class => "control-label" %><br>
        <%= form.select :status, ['public', 'private'], selected: 'public', :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit :class => "btn btn-success mt-2" %>
      </div>
    <% end %>
  </div>
</div>